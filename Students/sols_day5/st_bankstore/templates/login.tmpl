<html lang="en">
  <head>
    
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">


 <link href="../assets/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="../assets/css/mycss.css">

    <title>{{ .title }}</title>
  </head>
  
  
  
  <body>

    
    <nav class="navbar navbar-expand-lg navbar-light bg-light p-3">
      <div class="container-fluid"><a class="navbar-brand" href="/index">{{.title}}</a>
      </div>
    </nav>
   
    <div class="form-body">
        <div class="row">
            <div class="form-holder">
            <center>{{ if .message }} <div class="alert alert-secondary" role="alert">"{{.message}}"</div>{{end}}</center>
 
                <div class="form-content">
                    <div class="form-items">
                        <h3>Вход в систему</h3>
                        <p>Введите логин и пароль.</p>
                        <form class="requires-validation" method="POST" action="http://localhost:8080/login" novalidate id="signForm">

                            <div class="col-md-12">
                               <input class="form-control" type="text" name="username" placeholder="Логин" required>
                              
                               <div class="valid-feedback">Логин указан</div>
                               <div class="invalid-feedback">Логин не указан!</div>
                            </div>
                            


                           <div class="col-md-12">
                              <input class="form-control" type="password" name="password" placeholder="Пароль" required>
                               <div class="valid-feedback">Пароль указан</div>
                               <div class="invalid-feedback">Пароль не указан</div>
                           </div>

                           <div class="col-md-12">
                              <a href="http://localhost:8080/register" style="color: #fff">Регистрация</a>
                           </div>
                           

                       

                            <div class="form-button mt-3">
                                <button type="submit" id="btnSubmit" class="btn btn-primary">Вход</button>
                            </div>
                            
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>




	 <script src="/assets/js/bootstrap.bundle.min.js"></script>
  
<script>
(function () {
'use strict'
const forms = document.querySelectorAll('.requires-validation')
Array.from(forms)
  .forEach(function (form) {
    form.addEventListener('submit', function (event) {
    if (!form.checkValidity()) {
        event.preventDefault()
        event.stopPropagation()
    }

    //// the solution are here
    //else { 
    //  sendForm();
    //}
      form.classList.add('was-validated')
    }, true)
  })
})()
</script>
</body>

